<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>

        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">@color/color_accent</item>


        <item name="textColorDisabled">@color/textColorDisabled</item>

        <item name="textColorPrimary">@color/textColorPrimary</item>
        <item name="textColorSecondary">@color/textColorSecondary</item>
        <item name="textColorPrimaryInverse">#ffffffff</item>
        <item name="textColorSecondaryInverse">#b3ffffff</item>

        <item name="actionModeBackground">?attr/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:colorBackground">@android:color/background_light</item>
    </style>

    <style name="Theme.Title.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="Theme.Subtitle.Toolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/toolbar_subtitle_size</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Tablayout.Main" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="Theme.Tablayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#D32F2F</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

</resources>