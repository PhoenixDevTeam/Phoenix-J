<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/item_file_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Directory034hpgeprg;idjgp9834ug9034g.934743prejuetert23o8923rhe9r437r94h3t;wroiuwet.jpg"
            android:textColor="?attr/textColorPrimary"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/item_file_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="details"
            android:textColor="?attr/textColorSecondary"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_file_icon"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:background="@drawable/circle_red"
        android:checked="true"
        android:padding="12dp"
        android:src="@drawable/ic_directory_can_read" />
</RelativeLayout>